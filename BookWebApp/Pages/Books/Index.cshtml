@page
@model BookWebApp.Pages.Books.IndexModel

<partial name="_Notification"/>

<div class="row align-items-center">
    <div class="col-6">
        <h1>Book List</h1>
    </div>
    <div class="col-6">
        <a asp-page="Create" class="btn btn-primary d-flex align-items-center ms-auto" style="width: fit-content;"><iconify-icon icon="material-symbols:add" class="me-2"></iconify-icon> Create New Book</a>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Title</th>
            <th scope="col">Description</th>
            <th scope="col">Quantity</th>
            <th scope="col">Action</th>

        </tr>
    </thead>
    <tbody>
        @{
            var i = 0;
        }
        @foreach (var book in Model.Books)
        {
            i++;
            <tr>
                <th scope="row">@i</th>
                <td>@book.Title</td>
                <td>@book.Description</td>
                <td>@book.Quantity</td>
                <td>
                    <a asp-page="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-warning">
                        <div class="d-flex align-items-center">
                            <iconify-icon icon="bx:edit" class="me-1"></iconify-icon> <span>Edit</span>
                        </div>
                    </a>
                    <a asp-page="Delete" asp-route-id="@book.Id" class="btn btn-sm btn-danger">
                        <div class="d-flex align-items-center">
                            <iconify-icon icon="ic:round-delete" class="me-1"></iconify-icon> <span>Delete</span>
                        </div>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>